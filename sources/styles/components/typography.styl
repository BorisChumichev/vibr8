/***************************************************************
components/typography.styl
***************************************************************/

body
  -webkit-font-smoothing: antialiased;

h1, h2, h3, h4, h5, h6
  font-weight 300
  
h2
  font-size 36px
  margin-top 60px
  display block
  
h3
  font-weight 400
  &:hover:after
    content ' #'
    opacity .7
  
a
  color color-main
  display inline-block
  transition-all-ease(.2s)
  &:hover
    opacity .5

.synopsis
  font 20px/42px font-primary
  //font 18px/38px font-primary
  font-style italic 
  font-weight 300
  
p code
  background-color rgba(255,255,255,.1)

pre
  font-size .9em
  background-color rgba(255,255,255,.1)  
  padding 14px

strong
  font-weight 400